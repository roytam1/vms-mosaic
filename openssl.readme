   56   $       EXHEADER := e_os2.h
************

************
File S4:[OPENSSL.OPENSSL-0_9_7K.FIPS-1_0]INSTALL.COM;2
   29   $       FDIRS := ,RAND,SHA,DES,AES,DSA,RSA,DH,HMAC
   30   $       EXHEADER_ := fips.h
******
File S4:[OPENSSL.OPENSSL-0_9_7K.FIPS-1_0]INSTALL.COM;1
