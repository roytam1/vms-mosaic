************
File S4:[OPENSSL.OPENSSL-0_9_7K]INSTALL.COM;2
   55   $       DIRS := CRYPTO,FIPS-1_0,SSL,APPS,VMS!,RSAREF,TEST,TOOLS
   56   $       EXHEADER := e_os2.h
******
File S4:[OPENSSL.OPENSSL-0_9_7K]INSTALL.COM;1
